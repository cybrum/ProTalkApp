<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="@drawable/background_gradient_light">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorDarkTransparent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProTalk"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="20sp"
            />


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_above="@id/input_layout"
        android:layout_below="@id/my_toolbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="20dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/received_chat"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:padding="15dp"
            android:text="Hello"
            android:background="@drawable/button_rounded_initial"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="6dp"
            android:gravity="end"
            android:text="Joe 19:38"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

        <LinearLayout
            android:layout_margin="20dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/sent_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:padding="15dp"
                android:text="Hi, How R U? Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin at "
                android:background="@drawable/button_rounded_initial"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:padding="6dp"
                android:gravity="start"
                android:text="You 19:40"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




        </LinearLayout>

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:padding="10dp"
        android:layout_margin="4dp"
        android:background="@color/colorDarkTransparent"
        android:id="@+id/input_layout"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/input_text"
            android:hint="Type your message here..."
            android:textSize="18sp"
            android:textColor="@color/colorWhite"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

        </EditText>
        <ImageView
            android:id="@+id/input_text_btn"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/input_text"
            android:layout_alignBottom="@+id/input_text"
            android:layout_alignRight="@+id/input_text"
            android:src="@drawable/ic_send_black_24dp" />

    </RelativeLayout>
</RelativeLayout>