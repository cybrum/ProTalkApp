<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_light"

    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkTransparent">

        <include layout="@layout/appbar"
            android:id="@+id/profile_view_appbar"/>
    </android.support.design.widget.AppBarLayout>


    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/background_gradient_light">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_view_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/defaultimg"/>

        <TextView
            android:id="@+id/tv_profile_view_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            />





        <TextView
            android:id="@+id/tv_profile_view_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Hi, I am using ProTalkApp"
            />

        <Button
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_rounded_initial"
            android:layout_gravity="center"
            android:padding="15dp"
            android:text="Send Friend Request"
            android:id="@+id/send_friend_rqst_btn"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

        <Button
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_rounded_initial_black"

            android:layout_gravity="center"
            android:padding="15dp"
            android:text="Decline Friend Request"
            android:id="@+id/decline_rqst_btn"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />




    </LinearLayout>







</LinearLayout>